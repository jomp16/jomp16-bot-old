<project name="module_javascript" default="compile.module.javascript">
    <dirname property="module.javascript.basedir" file="${ant.file.module_javascript}"/>


    <property name="compiler.args.javascript" value="${compiler.args}"/>

    <property name="javascript.output.dir" value="${module.javascript.basedir}/../../out/production/JavaScript"/>
    <property name="javascript.testoutput.dir" value="${module.javascript.basedir}/../../out/test/JavaScript"/>

    <path id="javascript.module.bootclasspath">
        <!-- Paths to be included in compilation bootclasspath -->
    </path>

    <path id="javascript.module.production.classpath">
        <pathelement location="${jomp16-bot.output.dir}"/>
    </path>

    <path id="javascript.runtime.production.module.classpath">
        <pathelement location="${javascript.output.dir}"/>
        <path refid="jomp16-bot.runtime.production.module.classpath"/>
    </path>

    <path id="javascript.module.classpath">
        <pathelement location="${javascript.output.dir}"/>
        <pathelement location="${jomp16-bot.testoutput.dir}"/>
        <pathelement location="${jomp16-bot.output.dir}"/>
    </path>

    <path id="javascript.runtime.module.classpath">
        <pathelement location="${javascript.testoutput.dir}"/>
        <pathelement location="${javascript.output.dir}"/>
        <path refid="jomp16-bot.runtime.module.classpath"/>
    </path>


    <patternset id="excluded.from.module.javascript">
        <patternset refid="ignored.files"/>
    </patternset>

    <patternset id="excluded.from.compilation.javascript">
        <patternset refid="excluded.from.module.javascript"/>
    </patternset>

    <path id="javascript.module.sourcepath">
        <dirset dir="${module.javascript.basedir}">
            <include name="src"/>
        </dirset>
    </path>


    <target name="compile.module.javascript"
            depends="compile.module.javascript.production,compile.module.javascript.tests"
            description="Compile module JavaScript"/>

    <target name="compile.module.javascript.production" depends="compile.module.jomp16-bot"
            description="Compile module JavaScript; production classes">
        <mkdir dir="${javascript.output.dir}"/>
        <javac destdir="${javascript.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}"
               memorymaximumsize="${compiler.max.memory}" fork="true">
            <compilerarg line="${compiler.args.javascript}"/>
            <bootclasspath refid="javascript.module.bootclasspath"/>
            <classpath refid="javascript.module.production.classpath"/>
            <src refid="javascript.module.sourcepath"/>
            <patternset refid="excluded.from.compilation.javascript"/>
        </javac>

        <copy todir="${javascript.output.dir}">
            <fileset dir="${module.javascript.basedir}/src">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="compile.module.javascript.tests" depends="compile.module.javascript.production"
            description="compile module JavaScript; test classes" unless="skip.tests"/>

    <target name="clean.module.javascript" description="cleanup module">
        <delete dir="${javascript.output.dir}"/>
        <delete dir="${javascript.testoutput.dir}"/>
    </target>
</project>