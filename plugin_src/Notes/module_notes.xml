<project name="module_notes" default="compile.module.notes">
    <dirname property="module.notes.basedir" file="${ant.file.module_notes}"/>


    <property name="compiler.args.notes" value="${compiler.args}"/>

    <property name="notes.output.dir" value="${module.notes.basedir}/../../out/production/Notes"/>
    <property name="notes.testoutput.dir" value="${module.notes.basedir}/../../out/test/Notes"/>

    <path id="notes.module.bootclasspath">
        <!-- Paths to be included in compilation bootclasspath -->
    </path>

    <path id="notes.module.production.classpath">
        <pathelement location="${jomp16-bot.output.dir}"/>
    </path>

    <path id="notes.runtime.production.module.classpath">
        <pathelement location="${notes.output.dir}"/>
        <path refid="jomp16-bot.runtime.production.module.classpath"/>
    </path>

    <path id="notes.module.classpath">
        <pathelement location="${notes.output.dir}"/>
        <pathelement location="${jomp16-bot.testoutput.dir}"/>
        <pathelement location="${jomp16-bot.output.dir}"/>
    </path>

    <path id="notes.runtime.module.classpath">
        <pathelement location="${notes.testoutput.dir}"/>
        <pathelement location="${notes.output.dir}"/>
        <path refid="jomp16-bot.runtime.module.classpath"/>
    </path>


    <patternset id="excluded.from.module.notes">
        <patternset refid="ignored.files"/>
    </patternset>

    <patternset id="excluded.from.compilation.notes">
        <patternset refid="excluded.from.module.notes"/>
    </patternset>

    <path id="notes.module.sourcepath">
        <dirset dir="${module.notes.basedir}">
            <include name="src"/>
        </dirset>
    </path>


    <target name="compile.module.notes" depends="compile.module.notes.production,compile.module.notes.tests"
            description="Compile module Notes"/>

    <target name="compile.module.notes.production" depends="compile.module.jomp16-bot"
            description="Compile module Notes; production classes">
        <mkdir dir="${notes.output.dir}"/>
        <javac destdir="${notes.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}"
               memorymaximumsize="${compiler.max.memory}" fork="true">
            <compilerarg line="${compiler.args.notes}"/>
            <bootclasspath refid="notes.module.bootclasspath"/>
            <classpath refid="notes.module.production.classpath"/>
            <src refid="notes.module.sourcepath"/>
            <patternset refid="excluded.from.compilation.notes"/>
        </javac>

        <copy todir="${notes.output.dir}">
            <fileset dir="${module.notes.basedir}/src">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="compile.module.notes.tests" depends="compile.module.notes.production"
            description="compile module Notes; test classes" unless="skip.tests"/>

    <target name="clean.module.notes" description="cleanup module">
        <delete dir="${notes.output.dir}"/>
        <delete dir="${notes.testoutput.dir}"/>
    </target>
</project>